<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".SignUp">

    <TextView
        android:id="@+id/txt_confirmacao_senha"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="#629FF2"
        android:text="Confirmação de Senha"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_senha" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="33dp"
        android:background="#629FF2"
        android:text="Entrar"
        android:textColor="#FFFEFE"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_confirmacao_senha" />

    <TextView
        android:id="@+id/txt_politica_privacidade"
        android:layout_width="225dp"
        android:layout_height="17dp"
        android:text="Política de Privacidade"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_facebook"
        app:layout_constraintVertical_bias="0.833" />

    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:background="#629FF2"
        android:text="Nome"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#629FF2"
        android:text="E-mail"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nome" />

    <TextView
        android:id="@+id/txt_senha"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#629FF2"
        android:text="Senha"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_email" />

    <TextView
        android:id="@+id/txt_esqueceu_senha"
        android:layout_width="140dp"
        android:layout_height="18dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:text="Esqueceu a senha?"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <TextView
        android:id="@+id/txt_cadastrado"
        android:layout_width="140dp"
        android:layout_height="18dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="20dp"
        android:text="Já sou investidor"
        app:layout_constraintStart_toEndOf="@+id/txt_esqueceu_senha"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <ImageView
        android:id="@+id/btn_facebook"
        android:layout_width="117dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_google"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_esqueceu_senha"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/btn_google"
        android:layout_width="115dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_cadastrado"
        app:srcCompat="@drawable/google" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="158dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161"
        app:srcCompat="@drawable/captura_de_tela_2020_10_01_011550" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="44dp"
        android:layout_height="41dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="80dp"
        android:text="Ou"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_facebook"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintVertical_bias="0.014" />

</androidx.constraintlayout.widget.ConstraintLayout>
